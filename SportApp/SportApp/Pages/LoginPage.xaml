<Page x:Class="SportApp.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SportApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <StackPanel>
            <Label Content="Логин"></Label>
            <TextBox x:Name="LoginTextBox"></TextBox>
            <Label Content="Пароль"></Label>
            <PasswordBox x:Name="UserPasswordBox"></PasswordBox>
            <Button x:Name="LoginButton" Content="Авторизоваться" Click="LoginButton_Click"
                   Margin="10" Width="120"></Button>       
        </StackPanel>
    </Grid>
</Page>
